{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-checkout.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs -I {} bash -c 'if [[ \"{}\" == *.py ]]; then .venv/bin/ruff check --fix \"{}\" || true; fi'"
          }
        ]
      }
    ]
  }
}
